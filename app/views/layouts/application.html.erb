<!DOCTYPE html>
<html>
  <head>
    <title>J PREP ZDM </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- コード追加 Bootstrap CSS読み込みコード-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
  <nav class="navbar" style="background-color:#4169e1;">
  <div class="container-fluid">
    <div class="navbar-header">
      <p class="navbar-brand">
        <i class="fas fa-gem"> J PREP ZDM </i>
        <% if staff_signed_in? %>
          <i class="fas fa-user"><%= current_staff.name %>がログイン</i>
        <% end %>
      </p>
    </div>

  </div>
</nav>
  <div class="logout">  
    <% if staff_signed_in? %>
      <button type="button" class="btn btn-danger btn-sm text-white "><%= link_to "ログアウト", destroy_staff_session_path, method: :delete %></button>
    <% end %> 
  </div>

  <%= yield %>
</body>
</html>
