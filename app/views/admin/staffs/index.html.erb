<h4>スタッフ登録一覧</h4>

<table class="table">
<br>
  <thead>
    <tr class="table-info">
      <th><%= t('staff.id') %></th>
      <th><%= t('staff.name') %></th>
      <th><%= t('staff.email') %></th>
      <th><%= t('staff.department') %></th>      
      <th><%= t('staff.admin') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td><%= staff.id %></td>
          <td><%= staff.name %></td>
          <td><%= staff.email %></td>
          <td><%= staff.department %></td>         
          <td><%= staff.admin %></td>
          <td><%= link_to 'Show', admin_staff_path(staff) %></td>
          <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
          <td><%= link_to 'Delete', admin_staff_path(staff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>  
</table>
<br>
<br>
<button type="button" class="btn btn-success btn-sm"><%= link_to '新規スタッフ作成', new_admin_staff_path %></button>
