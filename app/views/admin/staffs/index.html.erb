<h4>スタッフ登録一覧</h4>
<br>
<%= link_to '新規スタッフ作成', new_admin_staff_path %>
<button type="button" class="btn btn-info btn-sm"><%= link_to '生徒検索一覧へ', students_path %></button>
<table class="table">
  <thead>
    <tr class="table-info">
      <th>スタッフ氏名</th>
      <th>メールアドレス</th>
      <th>所属部署</th>      
      <th>管理者権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td><%= link_to staff.name, admin_staff_path(staff.id) %></td>
          <td><%= staff.email %></td>
          <td><%= staff.department %></td>         
          <td><%= staff.admin %></td>
          <td><%= link_to '削除', admin_staff_path(staff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>  
</table>
<br>

