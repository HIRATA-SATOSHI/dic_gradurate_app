<div class= create>
  <%= link_to 'New_Student_Create', new_student_path %>
</div>
<br>

<%= search_form_for @q do |f| %>
    <%= f.label :student, "name search" %>
    <%= f.search_field :name_cont %>
    <br>
    <%= f.label :id, "student_id search" %>
    <%= f.number_field :id_gteq %>〜
    <%= f.number_field :id_lt %>

    <%= f.submit "検索" %>
<% end %>

<br>
<br>
 
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= sort_link(@q, :id, "Student_id") %></th>
      <th>Name</th>
      <th><%= sort_link(@q, :site, "Site") %></th>
      <th><%= sort_link(@q, :course, "Course") %></th>
      <th><%= sort_link(@q, :enrollment_status, "Enrollment_status") %></th>
      <th>deliete</th>
    </tr>
  </thead>

  <tbody>
    <% @student.each do |student| %>
      <tr>
        <td><%= link_to student.id, student_path(student.id) %></td>
        <td><%= student.name %></td>
        <td><%= student.site %></td>
        <td><%= student.course %></td>
        <td><%= student.enrollment_status %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

