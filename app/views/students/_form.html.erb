<div class="trans_button">
  <button type="button" class="btn btn-info"><%= link_to '生徒検索一覧', students_path %></button>
  <button type="button" class="btn btn-warning"><%= link_to '生徒詳細画面', @student %></button>
</div>
<br>
<%= form_with(model: student, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, min: 10000, max: 99999 %>
  </div>
  <br>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= form.label :course %>
    <%= form.select :course, Student.courses_i18n.invert %>
  </div>
  <br>
  <div class="field">
    <%= form.label :enrollment_status %>
    <%= form.select :enrollment_status, Student.enrollment_statuses_i18n.invert %>
  </div>
  <br>
  <div class="field">
    <%= form.label :site %>
    <%= form.select :site, Student.sites_i18n.invert %>
  </div>
  <br>
  <div class="field">
   <%= form.label :school_year %>
   <%= form.select :school_year, Student.school_years_i18n.invert %>
  </div>
  <br>
  <div class="field">
    <%= form.label :parent_name %></div>
    <%= form.text_field :parent_name %><div>
  </div>
  <br>
  <div class="field">  
    <%= form.label :phone_number %></div>
    <%= form.telephone_field :phone_number,size:15,maxlength:20 %></div>
  </div>
  <br>
  <div class="field">  
    <%= form.label :email_address %></div>
    <%= form.email_field :email_address,size:25 ,maxlength:30 %></div>
  </div>
  <br>
  <div class="field">  
    <%= form.label :live_address %></div>
    <%= form.text_field :live_address %></div>
  </div>
  <br>
  <div class="field">  
    <%= form.label :respond_memo %></div>
    <%= form.text_field :respond_memo %></div>
  </div>

  <br> 
  <div class="actions">
    <%= form.submit  %>
  </div>
<br>
<% end %>
